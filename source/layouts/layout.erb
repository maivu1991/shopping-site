<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    
    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">
    
    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= data.page.title || "The Middleman" %></title>
    
    <%= stylesheet_link_tag "Bonfire2", "bootstrap.min", "bootstrap-responsive.min" %>
    <%= javascript_include_tag  "jquery-1.9.1.min", "jquery.slides.min", "bootstrap.min"  %>
    <script>
    $(function(){
      $("#slides").slidesjs({
        width: 942,
        height: 355
      });
    });
  </script>
  </head>
  
  <body class="<%= page_classes %>">
    <%= yield %>

  </body>
</html>